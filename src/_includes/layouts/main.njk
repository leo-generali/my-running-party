    (() => {
      if(sessionStorage.loadedMyRunningPartyFonts) {
        document.documentElement.className += "font-loaded";
        return;
      }

      if( "fonts" in document ) {
        Promise.all([
          document.fonts.load("1em Lexend Deca"),
        ]).then(function () {
          document.documentElement.className += "font-loaded";
          sessionStorage.loadedMyRunningPartyFonts = true;
        });
